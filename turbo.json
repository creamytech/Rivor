{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["package.json"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**"],
      "passThroughEnv": ["*"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "test": {
      "outputs": ["coverage/**", "test-results/**"]
    },
    "format": {}
  }
}
