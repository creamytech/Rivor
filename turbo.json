{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["package.json"],
  "globalEnv": [
    "DATABASE_URL",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "OPENAI_API_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "db:generate"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"],
      "passThroughEnv": ["*"],
      "inputs": [
        "$TURBO_DEFAULT$", 
        "package.json",
        "next.config.mjs",
        "tsconfig.json",
        "tailwind.config.ts",
        "!**/*.test.ts",
        "!**/*.test.tsx",
        "!**/*.spec.ts",
        "!**/*.spec.tsx",
        "!**/test/**",
        "!**/tests/**",
        "!**/__tests__/**"
      ]
    },
    "db:generate": {
      "cache": true,
      "outputs": ["../../packages/db/src/generated/**"],
      "inputs": ["../../packages/db/prisma/schema.prisma"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": [],
      "inputs": [
        "$TURBO_DEFAULT$",
        "eslint.config.mjs",
        ".eslintrc.json",
        "!**/*.test.ts",
        "!**/*.test.tsx",
        "!**/*.spec.ts",
        "!**/*.spec.tsx"
      ]
    },
    "test": {
      "outputs": ["coverage/**", "test-results/**"],
      "inputs": [
        "**/*.test.ts", 
        "**/*.test.tsx", 
        "**/*.spec.ts", 
        "**/*.spec.tsx",
        "vitest.config.ts"
      ]
    },
    "format": {
      "outputs": [],
      "cache": false
    }
  }
}
