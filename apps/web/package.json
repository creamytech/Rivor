{
    "name": "web",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "npm run db:generate && next dev",
        "prebuild": "node ../../scripts/optimize-build.js || echo 'Pre-build optimization skipped'",
        "build": "npm run db:generate:prod && npm run db:migrate:safe && next build",
        "db:migrate:safe": "node ../../scripts/migrate-safe.js",
        "postbuild": "node ../../scripts/performance-monitor.js --analyze --report || echo 'Performance monitoring skipped'",
        "build:analyze": "ANALYZE=true npm run build",
        "build:fast": "npm run db:generate:prod && next build --no-lint",
        "start": "next start",
        "lint": "next lint",
        "test": "vitest",
        "test:watch": "vitest --watch",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "e2e": "playwright test",
        "e2e:ui": "playwright test --ui",
        "e2e:debug": "playwright test --debug",
        "db:migrate:deploy": "cd ../../packages/db && npx prisma migrate deploy",
        "db:generate": "cd ../../packages/db && npx prisma generate",
        "db:generate:prod": "cd ../../packages/db && npx prisma generate --no-engine",
        "db:health": "node ../../packages/db/health-check.js",
        "preinstall": "npx only-allow npm"
    },
    "dependencies": {
        "@azure/msal-node": "^3.7.1",
        "@dnd-kit/core": "^6.3.1",
        "@dnd-kit/sortable": "^8.0.0",
        "@dnd-kit/utilities": "^3.2.2",
        "@google-cloud/kms": "^5.1.0",
        "@microsoft/microsoft-graph-client": "^3.0.7",
        "@next-auth/prisma-adapter": "^1.0.7",
        "@prisma/client": "^6.14.0",
        "@radix-ui/react-avatar": "^1.1.1",
        "@radix-ui/react-dialog": "^1.1.2",
        "@radix-ui/react-dropdown-menu": "^2.1.2",
        "@radix-ui/react-label": "^2.1.0",
        "@radix-ui/react-progress": "^1.1.2",
        "@radix-ui/react-scroll-area": "^1.2.10",
        "@radix-ui/react-select": "^2.1.2",
        "@radix-ui/react-separator": "^1.1.0",
        "@radix-ui/react-slot": "^1.1.0",
        "@radix-ui/react-switch": "^1.1.1",
        "@radix-ui/react-tabs": "^1.1.1",
        "@radix-ui/react-toast": "^1.2.2",
        "@radix-ui/react-tooltip": "^1.1.3",
        "@rivor/config": "file:../../packages/config",
        "@rivor/crypto": "file:../../packages/crypto",
        "@rivor/db": "file:../../packages/db",
        "@sentry/nextjs": "^10.5.0",
        "@stripe/stripe-js": "^7.8.0",
        "@tanstack/react-query": "^5.59.16",
        "@trpc/client": "^11.0.0-rc.1068",
        "@trpc/next": "^11.0.0-rc.1068",
        "@trpc/react-query": "^11.0.0-rc.1068",
        "@trpc/server": "^11.0.0-rc.1068",
        "@upstash/redis": "^1.35.3",
        "bullmq": "^5.57.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "cmdk": "^0.2.1",
        "critters": "^0.0.23",
        "framer-motion": "^11.18.2",
        "googleapis": "^140.0.1",
        "isomorphic-dompurify": "^2.26.0",
        "lucide-react": "^0.468.0",
        "next": "15.2.4",
        "next-auth": "^4.24.10",
        "openai": "^4.68.0",
        "posthog-js": "^1.260.1",
        "prisma": "^6.14.0",
        "puppeteer": "^24.9.0",
        "react": "^18",
        "react-dom": "^18",
        "react-grid-layout": "^1.5.2",
        "recharts": "^3.1.2",
        "stripe": "^18.4.0",
        "tailwind-merge": "^2.5.4",
        "tailwindcss-animate": "^1.0.7",
        "web-vitals": "^5.1.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
        "@playwright/test": "^1.54.2",
        "@tailwindcss/postcss": "^4",
        "@testing-library/jest-dom": "^6.7.0",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@vitejs/plugin-react": "^5.0.0",
        "eslint": "^9.0.0",
        "eslint-config-next": "15.2.4",
        "jsdom": "^26.1.0",
        "tailwindcss": "^4",
        "typescript": "^5",
        "vitest": "^3.2.4"
    },
    "pnpm": {
        "overrides": {
            "@types/react": "^18",
            "@types/react-dom": "^18"
        }
    }
}
