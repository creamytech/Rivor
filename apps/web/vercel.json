{
  "version": 2,
  "framework": "nextjs",
  "installCommand": "npm ci --legacy-peer-deps --prefer-offline && npm --prefix ../../packages/db ci && npm --prefix ../../packages/db run prisma:generate",
  "buildCommand": "npm run db:migrate:deploy && npm run build",
  "build": {
    "env": {
      "NPM_CONFIG_CACHE": ".npm",
      "NEXT_TELEMETRY_DISABLED": "1",
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  },
  "functions": {
    "src/app/api/**/route.{js,ts}": {
      "maxDuration": 30
    },
    "src/app/api/sync/**/route.{js,ts}": {
      "maxDuration": 60,
      "memory": 1024
    },
    "src/app/api/documents/generate-pdf/route.{js,ts}": {
      "maxDuration": 30,
      "memory": 1024
    },
    "src/app/api/chat/route.{js,ts}": {
      "maxDuration": 30,
      "memory": 512
    }
  }
}